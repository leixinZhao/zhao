                </action>
                <action input_event="gre.keyrelease" type="gra.datachange">
                    <arg k="${control:alpha}">0</arg>
                </action>
                <render handler="rectangle">
                    <arg k="ah">44</arg>
                    <arg k="aw">44</arg>
                    <arg k="color">${control:color}</arg>
                    <arg k="halign">1</arg>
                    <arg k="valign">1</arg>
                </render>
                <render handler="text">
                    <arg k="color">0xffffff</arg>
                    <arg k="font">fonts/allfont-Medium.ttf</arg>
